<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Credit Card Number -->
    <EditText
        android:id="@+id/editTextCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="19"
        android:maxLines="1"
        android:layout_marginBottom="16dp"/>

    <!-- Owner Name -->
    <EditText
        android:id="@+id/editTextOwnerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Owner's Name"
        android:maxLines="1"
        android:layout_below="@id/editTextCardNumber"
        android:layout_marginBottom="16dp"/>

    <!-- Expiration Date -->
    <RelativeLayout
        android:id="@+id/expirationDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextOwnerName"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/editTextExpirationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:hint="Expiration Date (MM/YY)"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1" />

        <EditText
            android:id="@+id/editTextCVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="CVV"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:maxLines="1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expirationDateLayout"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#A141AF"
        android:text="Register"
        android:textColorLink="#A141AF"
        android:textStyle="bold" />
</RelativeLayout>
